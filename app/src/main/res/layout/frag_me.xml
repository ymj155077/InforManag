<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Write">



    <!--<fresh.com.informanag.view.PullToZoomScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_me_back"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/frag_back" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@color/Write"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <!--<android.support.v7.widget.CardView-->
                <!--android:layout_marginTop="86dp"-->
                <!--app:cardCornerRadius="100dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_width="61dp"-->
                <!--android:layout_height="61dp"-->
                <!--app:cardElevation="10dp"-->
                <!--app:cardPreventCornerOverlap="true"-->
                <!--&gt;-->

                <!--<ImageView-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/frag_back"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/head_round_me"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="86dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/touxiang"
                    app:riv_border_color="#333333"
                    app:riv_corner_radius="30dp"
                    app:riv_mutate_background="true" />








                <!--</android.support.v7.widget.CardView>-->

                <TextView
                    android:id="@+id/text_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:gravity="center_horizontal"
                    android:text="Tel"
                    android:textColor="@color/Write"
                    android:textSize="@dimen/ts_13" />


            </FrameLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/lin_me_message"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/message" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的消息"
                        android:textSize="@dimen/ts_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/img_label" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/order_back" />


                <LinearLayout
                    android:id="@+id/lin_Mer_vice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/fuwu" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家服务"
                        android:textSize="@dimen/ts_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/img_label" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/order_back" />


                <LinearLayout
                    android:id="@+id/lin_res"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/address" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址管理"
                        android:textSize="@dimen/ts_13" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/img_label" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/order_back" />


                <LinearLayout
                    android:id="@+id/lin_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pinlun" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"
                        android:textSize="@dimen/ts_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/img_label" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/order_back" />

                <LinearLayout
                    android:id="@+id/lin_set_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/shezhi" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出"
                        android:textSize="@dimen/ts_13" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/img_label" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/order_back"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    <!--</fresh.com.informanag.view.PullToZoomScrollView>-->
</LinearLayout>